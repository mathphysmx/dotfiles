/******************
*  xft settings  *
******************/
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintsnone


/***************************************
*  urxvt (rxvt-unicode) terminal settings*
***************************************/
URxvt.termName:         rxvt-unicode-256color

! Any scripts placed in the following directory path will override global ones with the same name:
URxvt.perl-lib:~/.urxvt/ext/


! window appearance
URxvt.geometry:             100x30
URxvt.scrollstyle:      plain
URxvt.internalBorder:   3
uRxvt*scrollBar:           true
! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false
! Pointer
URxvt.pointerBlank:         true


! font
URxvt*font: xft:Ubuntu Mono:size=14


! perl extensions
URxvt.perl-ext-common:  default,matcher,fullscreen,font-size,selection-to-clipboard
URxvt.urlLauncher:     /usr/bin/xdg-open
URxvt.matcher.button:   1
URxvt.keysym.F11: perl:fullscreen:switch
! tabs. https://github.com/gryf/tabbed


! behaviour setup
URxvt.saveLines:        4095
URxvt.iso14755:         False
! Ctrl+Alt+c (copy) Ctrl+Alt+v (paste).
URxvt.clipboard.autocopy: true

